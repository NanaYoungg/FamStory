<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/i_member_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_dad"/>

            <TextView
                android:id="@+id/i_member_tv_relation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="엄마"
                android:textColor="#2C2C2C"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/i_member_tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이름"
                android:textColor="#2C2C2C"
                android:textSize="15dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/i_member_tv_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="호칭"
                    android:textColor="#2C2C2C"
                    android:visibility="visible"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/i_member_et_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_round"
                    android:hint="호칭"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:textColor="#2C2C2C"
                    android:visibility="gone"
                    android:textSize="15dp"/>

            </FrameLayout>

            <Button
                android:id="@+id/i_member_btn_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_find_button"
                android:paddingTop="6dp"
                android:text="완료"
                android:visibility="gone"
                android:textSize="15dp"
                android:textColor="#FFFFFF"/>


        </LinearLayout>




</LinearLayout>