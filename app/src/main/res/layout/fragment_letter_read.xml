<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorlayout">



    <ImageView
        android:id="@+id/letter_read_img_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/paper1"/>

        <ImageButton
            android:id="@+id/letter_read_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/letter_read_img_view"
            app:layout_constraintTop_toTopOf="@+id/letter_read_img_view"
            app:layout_constraintBottom_toBottomOf="@id/trash_img_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_btn_customise"/>

    <ImageButton
        android:id="@+id/trash_img_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@+id/letter_read_img_view"
        app:layout_constraintTop_toTopOf="@+id/letter_read_img_view"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/trash_btn_customise"/>

    <TextView
        android:id="@+id/f_letter_from_tv"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/letter_read_img_view"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="From :"/>

    <TextView
        android:id="@+id/f_letter_sender_tv"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/f_letter_from_tv"
        app:layout_constraintLeft_toRightOf="@id/f_letter_from_tv"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="엄마"/>


    <TextView
        android:id="@+id/letter_read_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/f_letter_sender_tv"
        app:layout_constraintBottom_toBottomOf="@id/f_letter_sender_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:text="0000년00월00일"
        android:textSize="15dp"
        />



    <ScrollView
        android:id="@+id/letter_read_scroll"
        android:layout_width="350dp"
        android:layout_height="410dp"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        app:layout_constraintTop_toTopOf="@id/letter_read_img_view"
        android:layout_marginTop="170dp"
        android:scrollbarSize="7dp"
        android:scrollbarThumbVertical="@color/colorPrimary"
        android:scrollbarTrackVertical="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/read_photo_iv"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="80dp"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/read_contants_tv"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="7dp"
                android:hint="내용을 입력하세요"
                android:gravity="top"
                android:background="@color/colorTransparent"
                android:textSize="20sp"
                />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/v1"
        app:layout_constraintTop_toBottomOf="@id/f_letter_from_tv"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="240dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v2"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v3"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v4"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v5"
        app:layout_constraintTop_toBottomOf="@id/v4"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v6"
        app:layout_constraintTop_toBottomOf="@id/v5"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v7"
        app:layout_constraintTop_toBottomOf="@id/v6"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />

    <View
        android:id="@+id/v8"
        app:layout_constraintTop_toBottomOf="@id/v7"
        app:layout_constraintLeft_toLeftOf="@id/letter_read_img_view"
        app:layout_constraintRight_toRightOf="@id/letter_read_img_view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorGrey"
        />



</androidx.constraintlayout.widget.ConstraintLayout>